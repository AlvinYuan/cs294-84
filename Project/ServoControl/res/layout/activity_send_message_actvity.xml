<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fontFamily="sans-serif-light"
    tools:context=".Send_message_actvity" >

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/AlertsHeader"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/WhatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/line"
        android:text="Type of Danger"
        android:fontFamily="sans-serif-light"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WhatTxt"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/DangerLvlBar"
        android:fontFamily="sans-serif-light"
        >

        <RadioButton
            android:id="@+id/fire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Fire" />

        <RadioButton
            android:id="@+id/unstable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Structurally\nUnsound" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radioGroup1"
        android:layout_alignBottom="@+id/radioGroup1"
        android:layout_toRightOf="@+id/radioGroup1" >

        <RadioButton
            android:id="@+id/chem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemical" />

        <RadioButton
            android:id="@+id/other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Other" />

    </RadioGroup>

    <SeekBar
        android:id="@+id/DangerLvlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Details"
        android:layout_below="@+id/DangerTxt"
        android:layout_marginBottom="5dp"
        android:max="3"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DangerTxt"
        android:layout_below="@+id/optionalTxt"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Details"
        android:imeOptions="actionSend"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/DangerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WhatTxt"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="15dp"
        android:text="Danger Level"
        android:fontFamily="sans-serif-light"        
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/AlertsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Alert Message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/optionalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Details"
        android:layout_below="@+id/DangerLvlBar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-light"
        android:text="Optional"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/AlertsMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Alerts Map" />

    <Button
        android:id="@+id/AlertsLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AlertsMap"
        android:layout_alignBottom="@+id/AlertsMap"
        android:layout_toLeftOf="@+id/AlertsMap"
        android:text="Alerts Log" />

    <Button
        android:id="@+id/SendMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AlertsMap"
        android:layout_alignRight="@+id/AlertsMap"
        android:background="#0044cc"
        android:radius="10dp"
        android:text="Send Message"
        android:textColor="#000000" />

</RelativeLayout>