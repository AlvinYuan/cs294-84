<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Send_message_actvity" >

    <TextView
        android:id="@+id/AlertsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Message"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/WhatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/AlertsHeader"
        android:text="What"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_below="@+id/WhatTxt"  
        android:layout_alignLeft="@+id/DangerLvlBar"   
        >

        <RadioButton
            android:id="@+id/fire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Fire" />

        <RadioButton
            android:id="@+id/gun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shooter/Bomb" />

        <RadioButton
            android:id="@+id/eq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Earthquake" />
    </RadioGroup>
        
    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/radioGroup1"
        android:layout_toRightOf="@+id/radioGroup1"
        android:layout_below="@+id/WhatTxt" >
        
        <RadioButton
        	android:id="@+id/flood"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_above="@+id/chem"
        	android:layout_alignLeft="@+id/chem"
        	android:text="Flood" />

    	<RadioButton
        	android:id="@+id/chem"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignRight="@+id/SendMsg"
        	android:text="Chemical" />
    	<RadioButton
        	android:id="@+id/other"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignLeft="@+id/chem"
        	android:text="Other" />
    </RadioGroup>

    <SeekBar
        android:id="@+id/DangerLvlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Details"
        android:layout_below="@+id/DangerTxt"
        android:max="3"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DangerTxt"
        android:layout_below="@+id/DangerLvlBar"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:imeOptions="actionSend"
        android:inputType="textMultiLine"
        android:text="Details" />

    <Button
        android:id="@+id/AlertsLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AlertsMap"
        android:layout_alignBottom="@+id/AlertsMap"
        android:layout_alignLeft="@+id/DangerLvlBar"
        android:layout_toLeftOf="@+id/SendMsg"
        android:text="Alerts Log" />

    <Switch
        android:id="@+id/SOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/AlertsHeader"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/AlertsHeader"
        android:onClick="onToggleClicked"
        android:text="SOS?" />

    <TextView
        android:id="@+id/DangerTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/WhatTxt"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="14dp"
        android:text="Danger Level"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/AlertsMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/SendMsg"
        android:layout_below="@+id/SendMsg"
        android:layout_marginTop="10dp"        
        android:text="Alerts Map" />

    <Button
        android:id="@+id/SendMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Details"
        android:layout_marginTop="31dp"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="Send Message" />

</RelativeLayout>